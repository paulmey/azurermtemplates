{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "newStorageAccountName": {
      "type": "string",
      "defaultValue": "uniqueStorageAccountName"
    },
    "adminUserName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "location": {
      "type": "String",
      "defaultValue": "West US"
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_A0"
    },
    "nodeBaseName": {
      "type": "string",
      "defaultValue": "swarmnode"
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "clusterVNet"
    },
    "nicName": {
      "type": "string",
      "defaultValue": "nodeNic"
    },
    "installScriptUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/azurermtemplates/azurermtemplates/master/docker-swarm-cluster/install.sh"
    }
  },
  "variables": {
    "sourceImageName": "[concat('/', subscription().subscriptionId, '/services/images/2b171e93f07c4903bcad35bda10acf22__CoreOS-Stable-633.1.0')]",
    "subnetRef": "[concat(resourceId('Microsoft.Network/virtualNetworks',parameters('virtualNetworkName')),'/subnets/clusterSubnet')]",
    "cloudConfig": "[base64('#cloud-config\n\ncoreos:\n  etcd2:\n    listen-client-urls: http://0.0.0.0:4001\n  units:\n    - name: etcd.service\n      command: start\n')]",
    "clusterSize": 3
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('newStorageAccountName')]",
      "apiVersion": "2014-12-01-preview",
      "location": "[parameters('location')]",
      "properties": {
        "accountType": "Standard_LRS"
      }
    },
    {
      "copy": {
        "name": "publicIP",
        "count": "[variables('clusterSize')]"
      },
      "apiVersion": "2014-12-01-preview",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[concat('publicIP', copyIndex())]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "apiVersion": "2014-12-01-preview",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('virtualNetworkName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/24"
          ]
        },
        "subnets": [
          {
            "name": "clusterSubnet",
            "properties": {
              "addressPrefix": "10.0.0.0/24"
            }
          }
        ]
      }
    },
    {
      "copy": {
        "name": "nic",
        "count": "[variables('clusterSize')]"
      },
      "apiVersion": "2014-12-01-preview",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('nicName'), copyIndex())]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/publicIP', copyIndex())]",
        "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat('publicIP', copyIndex()))]"
              },
              "subnet": {
                "id": "[variables('subnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "copy": {
        "name": "vm",
        "count": "[variables('clusterSize')]"
      },
      "apiVersion": "2014-12-01-preview",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('nodeBaseName'), copyIndex())]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Storage/storageAccounts/', parameters('newStorageAccountName'))]",
        "[concat('Microsoft.Network/networkInterfaces/', concat(parameters('nicName'), copyIndex()))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computername": "[concat(parameters('nodeBaseName'), copyIndex())]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "customData": "[variables('cloudConfig')]"
        },
        "storageProfile": {
          "sourceImage": {
            "id": "[variables('sourceImageName')]"
          },
          "destinationVhdsContainer": "[concat('http://',parameters('newStorageAccountName'),'.blob.core.windows.net/vhds/')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(parameters('nicName'), copyIndex()))]"
            }
          ]
        }
      }
    },
    {
      "copy": {
        "name": "script",
        "count": "[variables('clusterSize')]"
      },
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('nodeBaseName'), copyIndex(), '/installScript')]",
      "apiVersion": "2014-12-01-preview",
      "location": "West US",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('nodeBaseName'), copyIndex())]"
      ],
      "properties": {
        "publisher": "Microsoft.OSTCExtensions",
        "type": "CustomScriptForLinux",
        "typeHandlerVersion": "1.2",
        "settings": {
          "fileUris": [
            "[parameters('installScriptUri')]"
          ],
          "commandToExecute": "[concat('sh install.sh ', copyIndex(), ' ', reference(concat(parameters('nicName'), '0')).ipConfigurations[0].properties.privateIPAddress)]"
        }
      }
    }
  ]
}